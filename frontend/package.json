  "private": true,
  "scripts": {
    "build": "node scripts/build.mjs",
    "watch": "node scripts/build.mjs --watch --mode=development",
    "lint": "eslint src --ext .js --ext .vue --ext .ts --fix"
  },
  "dependencies": {
    "@fontsource/lato": "^4.2.2",
    "@heroicons/vue": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "core-js": "^3.29.0",
    "moment": "^2.29.4",
    "pinia": "^2.0.32",
    "register-service-worker": "^1.7.1",
    "uuid": "^8.3.2",
    "vue": "^3.2.31",
    "vue-router": "^4.0.0-0"
  },
  "devDependencies": {
    "@craftamap/esbuild-plugin-html": "^0.5.0",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vue/compiler-sfc": "^3.2.47",
    "@vue/eslint-config-typescript": "^10.0.0",
    "esbuild": "^0.17.10",
    "esbuild-plugin-vue3": "^0.3.0",
    "eslint": "^8.8.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-vue": "^8.4.1",
    "sass": "^1.59.2",
    "typescript": "^4.9.5",
    "workbox-build": "^6.5.3",
    "yargs": "^17.3.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "standard",
      "@vue/typescript/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
